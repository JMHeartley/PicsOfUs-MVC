@model PicsOfUs.Models.PhotoDetailsViewModel
@{
	ViewBag.Title = "Details";
}

<div class="row no-gutters">
	<div class="col-12 text-center my-3" id="main-pic">
		<img src="@Model.Photo.Url" alt="@Model.Photo.Caption" class="img-fluid mx-auto">
	</div>
	<div class="col">
		<div class="row no-gutters justify-content-end align-items-center">
			<div class="col-sm-12 col-md-5 px-3">
				<h4>@Model.Photo.Caption</h4>
				<span>Captured on @Model.Photo.CaptureDateDisplay</span>
			</div>
			<div class="col col-md-6 text-center py-4">
				LOVE PIC
			</div>
		</div>
		<div class="d-flex justify-content-center">
				@Html.DisplayFor(m => m.Subjects)
		</div>
	</div>
	<div class="col-12">
		<!-- comments area -->
	</div>
</div>