@model PicsOfUs.Models.PhotoFormViewModel

@{
    ViewBag.Title = "PhotoForm";
}

<h2>PhotoFormView</h2>

@using (Html.BeginForm("Save", "Browse"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Photo.Url)
        @Html.TextBoxFor(p => p.Photo.Url, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Photo.Caption)
        @Html.TextBoxFor(p => p.Photo.Caption, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Photo.CaptureDate)
        @Html.TextBoxFor(p => p.Photo.CaptureDate, "{0:MM/dd/yyyy}", new { @class = "form-control" })
    </div>

    @Html.EditorFor(m => m.Members)


    @Html.HiddenFor(m => m.Photo.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}